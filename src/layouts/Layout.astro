---
interface Props {
	title: string;
}

const { title } = Astro.props;
import Navbar from '../components/Navbar.astro';
import Footer from '../components/Footer.astro'
---

<!doctype html>
<html lang="en">
	<head>
		<meta charset="UTF-8" />
		<meta name="description" content="Iglesia Red TLX | Un lugar para gente imperfecta buscando a un Dios perfecto" />
		<meta name="viewport" content="width=device-width" />
		<link rel="icon" type="image/png" href="/Iglesia Red.png" />
		<meta name="generator" content={Astro.generator} />
		<title>Iglesia Red | {title}</title>
	</head>
	<body class="bg-black">
		<Navbar />
		<slot />
		<Footer />
	</body>
</html>
