---
// Supports weights 100-900
import '@fontsource-variable/montserrat/wght-italic.css';
interface Props {
	title: string;
}

const { title } = Astro.props;
import Navbar from '../components/ui/Navbar.astro';
import Footer from '../components/ui/Footer.astro'
---

<!doctype html>
<html lang="en">
	<head>
		<meta charset="UTF-8" />
		<meta name="description" content="Iglesia Red TLX | Un lugar para gente imperfecta buscando a un Dios perfecto" />
		<meta name="viewport" content="width=device-width" />
		<link rel="icon" type="image/png" href="/logos/iglesia-red-icon.webp" />
		<meta name="generator" content={Astro.generator} />
		<title>Iglesia Red | {title}</title>
	</head>
	<body class="max-w-full">
		<Navbar />
		<slot />
		<Footer />
	</body>

	<style>
		body {
			font-family: 'Montserrat', sans-serif;
			background-color: #000000;
			color: #ffffff;
		}
	</style>
</html>

